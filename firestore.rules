rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Admins podem ler/escrever qualquer perfil de usuário
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Usuários autenticados podem ler seu próprio perfil
      allow read: if request.auth.uid == userId;
    }

    // Regras para a coleção de dados da cana
    match /cana_data/{documentId} {
      // Permite que usuários autenticados leiam, escrevam, atualizem e excluam documentos individuais
      allow read, write, update, delete: if request.auth != null;
      // Permite que usuários autenticados listem (consultem) a coleção
      allow list: if request.auth != null;
    }
  }
}
