rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção que armazena tanto as áreas quanto as vistorias
    match /vistorias/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }

    // Regra para a coleção de usuários
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid != null;
    }
  }
}