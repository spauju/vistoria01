rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Authenticated users can read their own user document.
      allow read: if request.auth.uid == userId;
      // Write access is restricted. 
      // For now, we allow admins to write, but will need a more secure rule if user management is expanded.
      // We are preventing reads on other users to avoid recursive loops in rules.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /cana_data/{document=**} {
      // Any authenticated user can read and write to the cana_data collection.
      // The UI logic in the app restricts specific actions (like adding/deleting areas) based on user role.
      allow read, write: if request.auth != null;
    }
  }
}
