rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read user data
    // Allow authenticated users to create new user documents (for createUserAction)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Prevent users from updating or deleting other user's info from client
      allow update, delete: if false;
    }

    // Allow authenticated users to read and write to areas collection
    match /areas/{areaId} {
      allow read, write: if request.auth != null;
    }
  }
}
