rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES DE AJUDA ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Verifica se o custom claim 'admin' está presente no token do usuário.
      // Este claim é definido no backend ao criar/promover um usuário.
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      // Verifica se o usuário que faz a requisição é o dono do documento.
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- REGRAS PARA A COLEÇÃO 'users' ---

    match /users/{userId} {
      // LEITURA (read):
      // - Qualquer usuário autenticado pode ler os perfis (para listar técnicos, etc.).
      // - Um admin também pode ler.
      allow read: if isSignedIn();

      // ESCRITA (update):
      // - Um usuário só pode editar seu próprio perfil.
      // - Um admin pode editar qualquer perfil.
      allow update: if isOwner(userId) || isAdmin();
      
      // CRIAÇÃO E EXCLUSÃO:
      // - Apenas administradores podem criar ou apagar documentos de usuários.
      allow create, delete: if isAdmin();
    }
    
    // --- REGRAS PARA A COLEÇÃO 'cana_data' ---

    match /cana_data/{documentId} {
      // LEITURA e ATUALIZAÇÃO:
      // - Qualquer usuário logado (técnico ou admin) pode ler e atualizar dados.
      allow read, update: if isSignedIn();
      
      // CRIAÇÃO e EXCLUSÃO:
      // - Apenas administradores podem criar ou deletar dados.
      allow create, delete: if isAdmin();
    }
  }
}
