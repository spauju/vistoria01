rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES GLOBAIS ---
    
    // Função que verifica se o usuário está logado.
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Função que verifica se o usuário é um administrador usando Custom Claims.
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }
    
    // Função para verificar se o ID do usuário da requisição corresponde ao ID do documento.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- REGRAS PARA A COLEÇÃO 'users' ---
    match /users/{userId} {
      // LEITURA: Qualquer usuário autenticado pode ler os perfis (para listar técnicos, etc.).
      allow read: if isSignedIn();
      
      // ESCRITA (CRIAR, ATUALIZAR, APAGAR): Apenas administradores podem gerenciar usuários.
      // Usuários individuais não podem se editar diretamente aqui, a lógica de "mudar senha" é feita pela Autenticação do Firebase, não pelo Firestore.
      allow write: if isAdmin();
    }
    
    // --- REGRAS PARA A COLEÇÃO 'cana_data' ---
    match /cana_data/{document=**} {
      // LEITURA E ATUALIZAÇÃO: Qualquer usuário logado (técnicos e admins) pode ler e atualizar.
      allow read, update: if isSignedIn();
      
      // CRIAÇÃO E EXCLUSÃO: Apenas administradores podem criar ou apagar áreas e vistorias.
      allow create, delete: if isAdmin();
    }
  }
}
