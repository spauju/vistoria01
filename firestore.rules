rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- FUNÇÕES GLOBAIS ---

    // Função que verifica se o usuário está logado.
    function isSignedIn() {
      return request.auth != null;
    }

    // Função que verifica se o usuário tem a custom claim 'admin'.
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // --- REGRAS PARA A COLEÇÃO 'users' ---

    match /users/{userId} {
      // LEITURA: Qualquer usuário autenticado pode ler os perfis (para listar técnicos, etc.).
      allow read: if isSignedIn();
      
      // ATUALIZAÇÃO: Apenas o próprio usuário pode atualizar seu perfil.
      allow update: if isSignedIn() && request.auth.uid == userId;

      // CRIAÇÃO E EXCLUSÃO: Apenas administradores.
      allow create, delete: if isAdmin();
    }
    
    // --- REGRAS PARA A COLEÇÃO 'cana_data' ---

    match /cana_data/{document=**} {
      // LEITURA E ATUALIZAÇÃO: Qualquer usuário autenticado pode ler e atualizar.
      allow read, update: if isSignedIn();
      
      // CRIAÇÃO E EXCLUSÃO: Apenas administradores.
      allow create, delete: if isAdmin();
    }
  }
}
