rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return getUserData().role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow create: if isAdmin();
    }

    match /cana_data/{document=**} {
      // Allow read/write for any authenticated user.
      // The UI and server actions already restrict specific actions (like delete) based on role.
      // This rule avoids complex cross-collection queries in rules, which cause "Missing or insufficient permissions".
      allow read, write: if request.auth != null;
    }
  }
}
