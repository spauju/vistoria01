rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Public read access, but only authenticated users can write.
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /areas/{areaId=**} {
      // Public read access, but only authenticated users can write.
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
