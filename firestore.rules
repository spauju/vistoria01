rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins can read/write all user data.
    // All authenticated users can read their own user data.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow any authenticated user to read and write to the cana_data collection.
    match /cana_data/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
